<Window x:Class="Exam.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        Title="LoginWindow" Height="133.333" Width="236" ResizeMode="NoResize" Background="AliceBlue">
    <Grid Height="104" VerticalAlignment="Bottom">
        <Label x:Name="label" Content="Login:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" Height="23" Margin="77,13,19,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="77,44,19,0" VerticalAlignment="Top" Height="23"/>
        <Button x:Name="buttonOk" Content="Ok" IsDefault="True" HorizontalAlignment="Left" Margin="10,72,0,12" Width="75" Click="buttonOk_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" IsCancel="True" Margin="136,72,19,12" Click="buttonCancel_Click"/>
    </Grid>
</Window>
